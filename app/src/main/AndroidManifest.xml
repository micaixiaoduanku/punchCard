<?xml version="1.0" encoding="utf-8"?>
<manifest package="remote.com.example.huangli.punchcard"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".MainApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.PlanActivity"
            android:label="@string/label_activity_plan"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"
            ></activity>
        <activity
            android:name=".activity.NewPlanActivity"
            android:label="@string/label_activity_make_new_plan"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"
            ></activity>
        <activity
            android:name=".activity.EditPlanActivity"
            android:label="@string/label_activity_make_new_plan"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"
            ></activity>
        <activity
            android:name=".activity.AddTaskActivity"
            android:label="@string/label_activity_add_new_task"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"
            ></activity>
        <activity
            android:name=".activity.SharePicsPagerActivity"
            android:label="@string/label_activity_add_new_task"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"
            ></activity>
    </application>

</manifest>