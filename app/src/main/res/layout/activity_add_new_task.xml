<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dip"
            >
            <TextView
                android:text="描述下任务吧!"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edit_task"
                android:layout_marginTop="10dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="10dip"
                android:text="选择你的提醒日"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginTop="50dip"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <remote.com.example.huangli.punchcard.ctviews.ItemLayoutCbDay
                    android:id="@+id/cb_layout1"
                    android:layout_weight="1"
                    android:layout_width="100dip"
                    android:layout_height="30dip"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >
                </remote.com.example.huangli.punchcard.ctviews.ItemLayoutCbDay>
                <remote.com.example.huangli.punchcard.ctviews.ItemLayoutCbDay
                    android:id="@+id/cb_layout2"
                    android:layout_weight="1"
                    android:layout_width="100dip"
                    android:layout_height="30dip"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >
                </remote.com.example.huangli.punchcard.ctviews.ItemLayoutCbDay>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dip"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <remote.com.example.huangli.punchcard.ctviews.ItemLayoutCbDay
                    android:id="@+id/cb_layout3"
                    android:layout_weight="1"
                    android:layout_width="100dip"
                    android:layout_height="30dip"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >
                </remote.com.example.huangli.punchcard.ctviews.ItemLayoutCbDay>
                <remote.com.example.huangli.punchcard.ctviews.ItemLayoutCbDay
                    android:id="@+id/cb_layout4"
                    android:layout_weight="1"
                    android:layout_width="100dip"
                    android:layout_height="30dip"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >
                </remote.com.example.huangli.punchcard.ctviews.ItemLayoutCbDay>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dip"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <remote.com.example.huangli.punchcard.ctviews.ItemLayoutCbDay
                    android:id="@+id/cb_layout5"
                    android:layout_weight="1"
                    android:layout_width="100dip"
                    android:layout_height="30dip"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >
                </remote.com.example.huangli.punchcard.ctviews.ItemLayoutCbDay>
                <remote.com.example.huangli.punchcard.ctviews.ItemLayoutCbDay
                    android:id="@+id/cb_layout6"
                    android:layout_weight="1"
                    android:layout_width="100dip"
                    android:layout_height="30dip"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >
                </remote.com.example.huangli.punchcard.ctviews.ItemLayoutCbDay>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dip"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <remote.com.example.huangli.punchcard.ctviews.ItemLayoutCbDay
                    android:id="@+id/cb_layout7"
                    android:layout_weight="1"
                    android:layout_width="100dip"
                    android:layout_height="30dip"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >
                </remote.com.example.huangli.punchcard.ctviews.ItemLayoutCbDay>
                <remote.com.example.huangli.punchcard.ctviews.ItemLayoutCbDay
                    android:id="@+id/cb_layout8"
                    android:layout_weight="1"
                    android:layout_width="100dip"
                    android:layout_height="30dip"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >
                </remote.com.example.huangli.punchcard.ctviews.ItemLayoutCbDay>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_margin="10dip"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_cancel"
                android:layout_weight="1"
                android:background="@color/black"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消"
                android:layout_marginRight="5dip"
                />
            <Button
                android:id="@+id/btn_ok"
                android:layout_weight="1"
                android:background="@color/black"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保存"
                />
        </LinearLayout>
    </RelativeLayout>